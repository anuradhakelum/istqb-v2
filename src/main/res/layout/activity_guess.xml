<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anuradhakelum.istqbmockexam.GuessActivity">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toTopOf="@id/cardv7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <ScrollView
            android:id="@+id/scrollbleview02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:foregroundGravity="left"
            android:padding="8dp">

            <TextView
                android:id="@+id/guessquestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="left"
                android:padding="8dp"
                android:text="@string/sample"
                android:textAllCaps="true"
                android:textColor="@color/textColor"
                android:textStyle="bold" />

        </ScrollView>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardv7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardview6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:id="@+id/linearLayout03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <RadioButton
                android:id="@+id/gRone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="gradioOneClick"
                android:text="RadioButton"
                android:textAllCaps="true" />

            <RadioButton
                android:id="@+id/gRtwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="gradioTwoClick"
                android:text="RadioButton"
                android:textAllCaps="true" />

            <RadioButton
                android:id="@+id/gRthree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="gradioThreeClick"
                android:text="RadioButton"
                android:textAllCaps="true" />

            <RadioButton
                android:id="@+id/gRfour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="gradioFourClick"
                android:text="RadioButton"
                android:textAllCaps="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/shufflebtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="10"
                    android:background="@drawable/mybutton"
                    android:onClick="shuffleClick"
                    android:padding="8dp"
                    android:text="NEXT" />


            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>
